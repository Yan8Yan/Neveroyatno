@model IEnumerable<Neveroyatno.Models.Lecture>

<h2>Мои лекции</h2>

<table class="table">
    <thead>
        <tr>
            <th>Название</th>
            <th>Содержание</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var lecture in Model)
        {
            <tr>
                <td>@lecture.Title</td>
                <td>@lecture.Content</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@lecture.Id">Редактировать</a> |
                    <a asp-action="Details" asp-route-id="@lecture.Id">Просмотр</a> |
                    <a asp-action="Delete" asp-route-id="@lecture.Id">Удалить</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<p>
    <a asp-action="Create" class="btn btn-primary">Добавить новую лекцию</a>
</p>
